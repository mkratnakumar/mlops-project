pipeline {
    agent any

    environment {
        PIP_USER_BIN = "$HOME/.local/bin"
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/mkratnakumar/mlops-project.git'
            }
        }

        stage('Ensure Python Installed') {
            steps {
                sh '''
                command -v python3 >/dev/null 2>&1 || {
                  echo "❌ Python3 not installed on Jenkins node"
                  exit 1
                }
                python3 --version
                '''
            }
        }

        stage('Install Python Dependencies (User Space)') {
            steps {
                sh '''
                pythong install pip3
                pip3 install --user --upgrade pip
                pip3 install --user -r requirements.txt
                pip3 install --user dvc
                '''
            }
        }

        stage('Run DVC Pipeline') {
            steps {
                sh '''
                export PATH=$PATH:$HOME/.local/bin
                dvc repro
                '''
            }
        }

        stage('Show Metrics') {
            steps {
                sh '''
                export PATH=$PATH:$HOME/.local/bin
                dvc metrics show
                '''
            }
        }
    }

    post {
        success {
            echo "✅ MLOps CI/CD pipeline completed successfully"
        }
        failure {
            echo "❌ MLOps CI/CD pipeline failed"
        }
    }
}
