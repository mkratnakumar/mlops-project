pipeline {
    agent any

    environment {
        USER_BIN = "$HOME/.local/bin"
        PATH = "$PATH:$HOME/.local/bin"
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/mkratnakumar/mlops-project.git'
            }
        }

        stage('Verify Environment & AWS Access') {
            steps {
                withCredentials([[
                    $class: 'AmazonWebServicesCredentialsBinding',
                    credentialsId: 'aws-access-key'
                ]]) {
                    sh '''
                        python3 --version
                        pip3 --version
                        aws sts get-caller-identity
                    '''
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '''
                    pip3 install --user --upgrade pip
                    pip3 install --user -r requirements.txt
                    pip3 install --user "dvc[s3]"
                '''
            }
        }

        stage('DVC Pull (from S3)') {
            steps {
                withCredentials([[
                    $class: 'AmazonWebServicesCredentialsBinding',
                    credentialsId: 'aws-access-key'
                ]]) {
                    sh '''
                        dvc pull
                    '''
                }
            }
        }

        stage('Train Model (Staging)') {
            steps {
                withCredentials([[
                    $class: 'AmazonWebServicesCredentialsBinding',
                    credentialsId: 'aws-access-key'
                ]]) {
                    sh '''
                        dvc repro
                    '''
                }
            }
        }

        stage('Show Metrics') {
            steps {
                sh '''
                    dvc metrics show
                '''
            }
        }

        stage('Approve Promotion') {
            steps {
                input message: 'Approve promotion of model to PRODUCTION?'
            }
        }

        stage('Promote Model (Production)') {
            steps {
                withCredentials([[
                    $class: 'AmazonWebServicesCredentialsBinding',
                    credentialsId: 'aws-access-key'
                ]]) {
                    sh '''
                        dvc repro promote
                    '''
                }
            }
        }

        stage('Push Artifacts to S3') {
            steps {
                withCredentials([[
                    $class: 'AmazonWebServicesCredentialsBinding',
                    credentialsId: 'aws-access-key'
                ]]) {
                    sh '''
                        dvc push
                    '''
                }
            }
        }
    }

    post {
        success {
            echo "MLOps pipeline completed successfully"
        }
        failure {
            echo "MLOps pipeline failed"
        }
    }
}
