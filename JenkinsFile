pipeline {
    agent {
        docker {
            image 'python:3.10-slim'
            args '-u root'
        }
    }

    environment {
        VENV_DIR = "venv"
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/mkratnakumar/mlops-project.git'
            }
        }

        stage('Verify Python') {
            steps {
                sh '''
                python --version
                pip --version
                '''
            }
        }

        stage('Install System Dependencies') {
            steps {
                sh '''
                apt-get update
                apt-get install -y git
                '''
            }
        }

        stage('Install Python Dependencies') {
            steps {
                sh '''
                pip install --upgrade pip
                pip install -r requirements.txt
                pip install dvc
                '''
            }
        }

        stage('Run DVC Pipeline') {
            steps {
                sh '''
                dvc repro
                '''
            }
        }

        stage('Show Metrics') {
            steps {
                sh '''
                dvc metrics show
                '''
            }
        }
    }

    post {
        success {
            echo "✅ CI/CD Pipeline completed successfully"
        }
        failure {
            echo "❌ CI/CD Pipeline failed"
        }
    }
}
