pipeline {
    agent any

    environment {
        USER_BIN = "$HOME/.local/bin"
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/mkratnakumar/mlops-project.git'
            }
        }

        stage('Verify Python') {
            steps {
                sh '''
                command -v python3 >/dev/null 2>&1 || {
                    echo "❌ python3 not installed"
                    exit 1
                }
                python3 --version
                '''
            }
        }

        stage('Verify pip3') {
            steps {
                sh '''
                command -v pip3 >/dev/null 2>&1 || {
                    echo "❌ pip3 not installed (admin action required)"
                    exit 1
                }
                pip3 --version
                '''
            }
        }

        stage('Install Dependencies (User Space)') {
            steps {
                sh '''
                pip3 install --user --upgrade pip
                pip3 install --user -r requirements.txt
                pip3 install --user dvc
                '''
            }
        }

        stage('Run DVC Pipeline') {
            steps {
                sh '''
                export PATH=$PATH:$HOME/.local/bin
                dvc repro
                '''
            }
        }

        stage('Show Metrics') {
            steps {
                sh '''
                export PATH=$PATH:$HOME/.local/bin
                dvc metrics show
                '''
            }
        }

        stage('DVC Push') {
            steps {
                sh '''
                export PATH=$PATH:$HOME/.local/bin
                dvc push
                '''
            }
        }
    }

    post {
        success {
            echo "✅ MLOps pipeline completed successfully"
        }
        failure {
            echo "❌ MLOps pipeline failed"
        }
    }
}
