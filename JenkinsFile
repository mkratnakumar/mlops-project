pipeline {
    agent any

    environment {
        VENV_DIR = "venv"
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/mkratnakumar/mlops-project.git'
            }
        }

        stage('Check Python Availability') {
            steps {
                sh '''
                if ! command -v python3 >/dev/null 2>&1; then
                    echo "❌ Python3 not available on Jenkins agent"
                    exit 1
                fi
                python3 --version
                '''
            }
        }

        stage('Create Virtual Environment') {
            steps {
                sh '''
                python3 -m venv ${VENV_DIR}
                '''
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '''
                . ${VENV_DIR}/bin/activate
                pip install --upgrade pip
                pip install -r requirements.txt
                pip install dvc
                '''
            }
        }

        stage('Run DVC Pipeline') {
            steps {
                sh '''
                . ${VENV_DIR}/bin/activate
                dvc repro
                '''
            }
        }

        stage('Show Metrics') {
            steps {
                sh '''
                . ${VENV_DIR}/bin/activate
                dvc metrics show
                '''
            }
        }
    }

    post {
        success {
            echo "✅ CI/CD Pipeline completed successfully"
        }
        failure {
            echo "❌ CI/CD Pipeline failed"
        }
    }
}
